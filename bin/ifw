#!/bin/sh

ifconfig "$@" 2>&1 | \
  perl -0777pe 's/^(lo|veth[1-9])\s.*?\n\n//ms;
                s/.*(packets|collisions|Interrupt).*\n//g'

iwconfig 2>&1 | \
  perl -0777pe 's/.*\sno wireless extensions.*\n\n//g;
                s/.*(RTS|[RT]x invalid|excessive retries).*\n//g;
                s/\n+$/\n/;'

echo
rj dhc
rj ipw3945
lsof -i udp:bootpc
