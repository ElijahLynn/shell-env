#!/bin/bash

if [ -z "$*" ]; then
  echo -n "Setting up handy shortcuts ..."
  cd ~/bin/shortcuts
  for mode in 400 440 444 500 550 555 \
              600 640 644 664 660 666 \
              {1,2,4,}{700,710,711,750,751,755,775,770,771,777}
  do
    [ -e $mode ] || ln -s cm $mode
    echo -n " $mode"
  done
  echo
  exit 0
fi

mode=`basename $0`

case "$mode" in
  *[0-7]) exec chmod "$mode" "$@" ;;
  *)      exec chmod "$@" ;;
esac
