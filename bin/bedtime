#!/bin/sh

me=`basename $0`

usage () {
    if [ -n "$1" ]; then
        echo "$*" >&2
        echo
    fi

    cat <<EOF >&2
Usage: $me THRESHOLD
e.g. $me 1am
     $me 11pm yesterday
EOF
}

if [ "$1" == '-h' ] || [ "$1" == '--help' ] || [ -z "$1" ]; then
    usage
fi

if ! as=$( active-since "$@" ); then
    echo "Threshold not crossed"
    exit 0
fi

logger "would reboot! $as"
exit 1
