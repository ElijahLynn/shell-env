#!/bin/bash

set -e

me="grep-shortcuts"
mode=`basename $0`

if [ "$mode" = "$me" ] && [ -z "$*" ]; then
  here=`dirname $0`
  echo -n "Setting up handy grep shortcuts in $here ..."
  cd "$here"
  # see also global aliases in .zshrc
  for switches in {,i}{,l,L}{,r}{,v}; do
    cmd=g$switches
    [ "$cmd" = 'gv' ] && continue
    preexisting=$( which $cmd 2>/dev/null )
    if [ $? = 0 ] && [ "$ZDOTDIR/bin/$cmd" != "$preexisting" ]; then
        echo -e "\nWARNING! $cmd already found on path" >&2
    fi
    if ! [ -e $cmd ]; then
        ln -s $me $cmd
        echo -n " $cmd"
    fi
  done
  echo
  exit 0
fi

switches="${mode#g}"
exec egrep -$switches "$@"
