#autoload

_func_dir="${fpath[(r)*share/zsh*/functions*]/functions\/*/functions}"
_Core_dir=( $_func_dir/**/compinit )
_Core_dir=${${_Core_dir[1]}%/compinit}

zrecompile "$@" -p -- \
  -R ~/.zshenv -- \
  -R ~/.zshrc  -- \
  -R ~/.zcompdump  -- \
  -R $_Core_dir/compinit -- \
  -R $_Core_dir/compaudit -- \
  -R $_Core_dir/compdump -- \
  -M -U ~/.zsh/funcs.zwc \
        ~/.zsh/functions/*(*) \
        $_func_dir/Completion/*/_* \
        $_func_dir/Prompts/*
