#autoload

quiet=''
[[ -n "$*[(r)(up|update)]" ]] && quiet='-q'

home=${ZDOTDIR:-$HOME}

normal_colourer=$home/bin/awk/colour-cvs-output.awk
diff_colourer=$home/bin/awk/colour-diff-output.awk

colourer=''

if [[ -n "$*[(r)(up|update|co|checkout|tag|rtag)]" ]]; then
  colourer="$normal_colourer"
elif [[ -n "$*[(r)(diff|rdiff|patch)]" ]]; then
  colourer="$diff_colourer"
fi

if [[ -n "$colourer" ]]; then
  command cvs $quiet "$@" | awk -f $colourer
else
  command cvs $quiet "$@"
fi
